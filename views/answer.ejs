<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('partials/head.ejs')%>
        <title>Nielit Exam Quora</title>
</head>

<body>
    <div class="fixed" >
        <%-include('partials/header.ejs')%>
        <%-include('partials/nav.ejs')%>
        <%-include('partials/login.ejs')%>
        <%-include('partials/register.ejs')%>
    </div>
    <div class="d-flex flex-column">
        <div class="container">
        <div class="card " style="margin-top: 16rem;">
                <div class="card-header fw-bold fs-4 d-flex">
                    <div>
                        Question :
                    </div> 
                    <div>
                        <%=question.question %>
                    </div>
                </div>
                <%if(result) {%>
                    <%for(var i=0;i < result.answers.length ; i++){%> 
                        <div class="card-body fw-bold fs-5 d-flex">
                            <div>
                                Answer_<%=i+1%>:  
                            </div>
                            <div>
                                <%result.answers[i].answer.forEach(ele=>{%>
                                    <%=ele%> <br>
                                <%})%>
                            </div>    
                        </div>
                        <span>
                            <a href="/" class="btn btn-dark float-end"> Return to Home </a>
                        </span>
                        <hr class="border border-5 border-dark">
                    <% } %>
                <% } else {%>
                    <div class="card-body fw-bold fs-5  text-danger">
                        No Answer Found
                        <span>
                            <a href="/" class="btn btn-dark float-end"> Return to Home </a>
                        </span>
                    </div>
                <% }%>   
                    <div class="card-footer text-muted">
                        <span class="badge bg-secondary text-dark fs-6">
                            Subject : <%=question.subject%>
                        </span>
                        <span class="badge bg-secondary text-dark fs-6">
                            Exam asked : <%=question.askedin.exam%> <%=question.askedin.year%>
                        </span>
                    </div>
        </div>
        </div>
    </div>
    
</body>

</html>